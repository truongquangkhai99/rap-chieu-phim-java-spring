<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
   
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
    
    <decorator name="login" page="login.jsp">
        <pattern>/login</pattern>
    </decorator>
    
    <decorator name="registry" page="registry.jsp">
        <pattern>/registry</pattern>
    </decorator>
    
    <decorator name="forgotpassword" page="forgotpassword.jsp">
        <pattern>/forgotpassword</pattern>
    </decorator>
    
    <decorator name="book" page="book.jsp">
        <pattern>/bill*</pattern>
    </decorator>
</decorators>